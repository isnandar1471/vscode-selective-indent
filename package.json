{
  "name": "vscode-selective-indent",
  "displayName": "Selective Indent",
  "description": "Easily convert indentation (tabs <-> spaces) on specific lines or the whole file in VSCode.",
  "publisher": "isnandar1471",
  "version": "0.0.5",
  "icon": "assets/icon128.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "homepage": "https://github.com/isnandar1471/vscode-selective-indent",
  "repository": {
    "type": "git",
    "url": "https://github.com/isnandar1471/vscode-selective-indent.git"
  },
  "bugs": {
    "url": "https://github.com/isnandar1471/vscode-selective-indent/issues",
    "email": "isnandar.1471@gmail.com"
  },
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Formatters"
  ],
  "license": "SEE LICENSE IN LICENSE",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-selective-indent.convertSelectedLinesIndentationToSpaces",
        "title": "Selective Indent: Convert Selected Lines Indentation to Spaces"
      },
      {
        "command": "vscode-selective-indent.convertSelectedLinesIndentationToTabs",
        "title": "Selective Indent: Convert Selected Lines Indentation to Tabs"
      },
      {
        "command": "vscode-selective-indent.convertAllLinesIndentationToSpaces",
        "title": "Selective Indent: Convert All Lines Indentation to Spaces"
      },
      {
        "command": "vscode-selective-indent.convertAllLinesIndentationToTabs",
        "title": "Selective Indent: Convert All Lines Indentation to Tabs"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vscode-selective-indent.convertAllLinesIndentationToSpaces",
          "when": "editorTextFocus",
          "group": "vscode-selective-indent@1"
        },
        {
          "command": "vscode-selective-indent.convertAllLinesIndentationToTabs",
          "when": "editorTextFocus",
          "group": "vscode-selective-indent@2"
        },
        {
          "command": "vscode-selective-indent.convertSelectedLinesIndentationToSpaces",
          "when": "editorHasSelection",
          "group": "vscode-selective-indent@3"
        },
        {
          "command": "vscode-selective-indent.convertSelectedLinesIndentationToTabs",
          "when": "editorHasSelection",
          "group": "vscode-selective-indent@4"
        }
      ]
    }
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "pretest": "npm run compile && npm run lint",
    "package": "npm run check-types && node esbuild.js --production",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  }
}
